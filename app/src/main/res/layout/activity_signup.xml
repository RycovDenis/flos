<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthActivitys.SignupActivity">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="74dp"
            android:layout_marginEnd="110dp"
            android:layout_marginRight="110dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/project_logo" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/UsernameLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="Username"
            android:orientation="vertical"
            app:endIconMode="custom"
            app:errorEnabled="true"
            app:helperTextEnabled="true"
            app:endIconDrawable="@drawable/ic_perm_identity_black_24dp" >


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nameEt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="11"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/EmailLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/UsernameLayout"
            android:hint="E-Mail"
            android:orientation="vertical"
            app:endIconDrawable="@drawable/ic_perm_identity_black_24dp"
            app:endIconMode="custom"
            app:errorEnabled="true"
            app:helperTextEnabled="true">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailEt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="11"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/EmailLayout"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="@string/Passwordlabel"
            android:orientation="vertical"
            app:endIconContentDescription="@string/content_description_end_icon"
            app:endIconDrawable="@drawable/ic_remove_red_eye_black_24dp"
            app:endIconMode="password_toggle"
            app:helperTextEnabled="true"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/LoginNowTv"
        android:gravity="right"
        android:textColor="@color/colorPrimary"
        android:padding="5dp"
        android:layout_below="@id/passwordLayout"
        android:layout_marginTop="0dp"
        android:text="@string/already_have_an_acccount_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <Button
            android:id="@+id/SignupBtn"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LoginNowTv"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="60dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/login_button"
            android:textAppearance="?attr/textAppearanceButton"
            android:textColor="@android:color/white"
            android:textSize="11pt"
            app:backgroundTint="@color/colorAccent"
            app:icon="@drawable/ic_perm_identity_black_24dp"
            app:rippleColor="?attr/colorOnPrimary"
            app:shapeAppearance="?attr/shapeAppearanceSmallComponent" />
</RelativeLayout>