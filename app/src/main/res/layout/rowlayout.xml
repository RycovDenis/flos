<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:elevation="4dp"
        tools:targetApi="lollipop">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/marginTop"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_toStartOf="@+id/textViewOptions"
                android:layout_toLeftOf="@+id/textViewOptions"
                android:layout_toEndOf="@+id/iv_ti_status_priority"
                android:layout_toRightOf="@+id/iv_ti_status_priority"
                android:text="@string/app_name"
                android:textAppearance="?android:textAppearanceLarge" />

            <TextView
                android:id="@+id/text_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_title"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/marginTop"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:text="@string/MockString"
                android:textAppearance="?android:textAppearanceMedium" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_ti_status_priority"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/marginTop"
                android:scaleType="centerCrop"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@android:drawable/ic_menu_compass"
                card_view:civ_border_color="#FFFFFFFF"
                card_view:civ_border_width="3dp"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textViewOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/marginTop"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="@string/_8942"
                android:textAppearance="?android:textAppearanceLarge"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:layout_alignParentEnd="true"
                tools:ignore="RtlSymmetry"
                android:clickable="true"
                android:focusable="true"
                />

            <TextView
                android:id="@+id/text_date"
                android:layout_width="77dp"
                android:layout_height="22dp"
                android:layout_below="@+id/text_desc"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:gravity="end"
                android:text="@string/MockDAte"
                android:textStyle="italic"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.947"
                card_view:layout_constraintStart_toStartOf="parent"
                tools:ignore="RtlCompat" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>